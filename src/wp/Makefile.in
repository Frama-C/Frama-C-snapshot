WHY3_COQ_SOURCES= $(addprefix why3/, $(COQ_LIBS_CEA))

ALL_COQ_SOURCES= $(WP_COQ_SOURCES) $(WHY3_COQ_SOURCES)
ALL_COQ_BINARIES= $(addsuffix o, $(ALL_COQ_SOURCES))
